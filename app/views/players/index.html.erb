<h1>Players</h1>



<div class="row">
  <div class="span4">
    <div class="content">
      <table class="table table-striped table-bordered table-condensed">
        <tr>
          <th>Name</th>
          <th>Number</th>
          <th>In game</th>
          <th></th>
          
        </tr>

        <% @players.each do |player| %>
        <tr>
          <td><%= player.name %></td>
          <td><%= player.number %></td>
          <td><%= player.in_game %></td>
          <td>
            

              <%= link_to 'Show', player%>
              <%= link_to 'Edit', edit_player_path(player)%>
              <%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' }%>
            
          </td>
        </tr>
        <% end %>
      </table>

      <br />

      <%= link_to 'New Player', new_player_path, :class => "btn" %>
    </div>
  </div>
</div>
