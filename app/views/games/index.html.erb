<h1>Games</h1>


<div class="row">
  <div class="span6">
    <div class="content">
      <table class="table table-striped table-bordered table-condensed">

        <tr>
          <th>Date</th>
          <th>Start time</th>
          <th>Opponent</th>
          <th></th>
          
        </tr>

        <% @games.each do |game| %>
        <tr>
          <td><%= game.date.strftime("%m/%d/%Y") %></td>
          <td><%= game.start_time.strftime("%I:%M%p") %></td>
          <td><%= game.opponent %></td>
          <td>
            <%= link_to 'Show', game %>
            <%= link_to 'Edit', edit_game_path(game) %>
            <%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
        <% end %>
      </table>

      <br />
      
      <%= link_to 'New Game', new_game_path, :class => "btn"%>
    </div>
  </div>
</div>
