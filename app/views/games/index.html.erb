<h1>Listing games</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Start time</th>
    <th>Opponent</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.date %></td>
    <td><%= game.start_time %></td>
    <td><%= game.opponent %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

