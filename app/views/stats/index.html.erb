<h1>Stats</h1>

<div class="content">
    <div class="row">
        <div class="span3">
            <h2>What</h2>
            This is my basketball stats app to collect 
            real-time data at game and minimize data-entry
            post-game.
        </div>
        <div class="span3">
            <h2>How</h2>
            The goal is for multiple people to collect stats during a game.
        </div>
    </div>
</div>


<h2>Summary</h2>
<div class="content">
    <div class="row">
        <div class="span12">
            <table class="table table-striped table-bordered table-condensed">
                <thead>
              <tr>
                <th>Player</th>
                <th>Two</th>
                <th>Three</th>
                <th>FT</th>
                <th>OR</th>
                <th>DR</th>
                <th>Blk</th>
                <th>Asst</th>
                <th>Steal</th>
                <th>TO</th>
                
                <th></th>
                
            </tr>
</thead><tbody>
            <% @stats.each do |stat| %>
            <tr>
                <td><%= stat.player_name %></td>
                
                <% @total_two = stat.two_made.to_i + stat.two_miss.to_i %>
                <% @ratio_two = [stat.two_made, " / ", @total_two].join %>
                <td><%= @ratio_two %></td>

                <% @total_three = stat.three_made.to_i + stat.three_miss.to_i %>
                <% @ratio_three = [stat.three_made, " / ", @total_three].join %>
                <td><%= @ratio_three %></td>

                <% @total_ft = stat.ft_made.to_i + stat.ft_miss.to_i %>
                <% @ratio_ft = [stat.ft_made, " / ", @total_ft].join %>
                <td><%= @ratio_ft %></td>

                <td><%= stat.off_reb %></td>
                <td><%= stat.def_reb %></td>
                <td><%= stat.block %></td>
                <td><%= stat.assist %></td>
                <td><%= stat.steal %></td>
                <td><%= stat.turnover %></td>
                
                <!-- <td>
                    <%= link_to 'Show', stat %>
                    <%= link_to 'Edit', edit_stat_path(stat) %>
                    <%= link_to 'Destroy', stat, method: :delete, data: { confirm: 'Are you sure?' } %>
                </td> -->
            </tr>
            <% end %>
        </tbody>
        
        <tfoot>
            <tr>
                <td>TOTALS</td>
                    <% @team_total_two = Stat.sum(:two_made) + Stat.sum(:two_miss) %>
                    <% @team_ratio_two = [Stat.sum(:two_made), " / ", @team_total_two].join %>
                <td><%= @team_ratio_two %></td>

                <% @team_total_three = Stat.sum(:three_made) + Stat.sum(:three_miss) %>
                    <% @team_ratio_three = [Stat.sum(:three_made), " / ", @team_total_three].join %>
                <td><%= @team_ratio_three %></td>

                <% @team_total_ft = Stat.sum(:ft_made) + Stat.sum(:ft_miss) %>
                    <% @team_ratio_ft = [Stat.sum(:ft_made), " / ", @team_total_ft].join %>
                <td><%= @team_ratio_ft %></td>
                
                <td><%= Stat.sum(:off_reb) %></td>
                <td><%= Stat.sum(:def_reb) %></td>
                <td><%= Stat.sum(:block) %></td>
                <td><%= Stat.sum(:assist) %></td>
                <td><%= Stat.sum(:steal) %></td>
                <td><%= Stat.sum(:turnover) %></td>
                <td></td>
        </tfoot>
        </table>

        <br />

        <%= link_to 'New Stat', new_stat_path, :class => "btn" %>

    </div>
</div>
</div>


